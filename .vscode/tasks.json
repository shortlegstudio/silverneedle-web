{
    "version": "2.0.0",
    "args": [],
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "args": [
                "build",
                "./silverneedle-web.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Tests",
            "command": "dotnet",
            "args": [
                "test",
                "./silverneedle-tests/silverneedle-tests.csproj"
            ],
            "group":{
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Web Application",
            "command": "dotnet",
            "args":[
                "run",
                "--project",
                "./silverneedle-asp/silverneedle-asp.csproj"
            ],
            "group":"none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}